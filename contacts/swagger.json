{
  "swagger": "2.0",
  "info": {
    "title": "Contacts CRUD API",
    "description": "API that handles CRUD operations for contacts",
    "version": "1.0.0"
  },
  "tags": [
    {
      "name": "Contacts"
    }
  ],
  "servers": [
    {
      "name": "Production",
      "url": "https://contacts-fsh6.onrender.com",
      "description": "Production server",
      "port": {
        "default": "443"
      }
    },
    {
      "name": "Development",
      "url": "http://localhost",
      "description": "Development server",
      "port": {
        "enum": [
          "8080",
          "443"
        ],
        "default": 8080
      }
    }
  ],
  "host": "contacts-fsh6.onrender.com",
  "basePath": "/",
  "schemes": [
    "http",
    "https"
  ],
  "paths": {
    "/": {
      "get": {
        "tags": [
          "Contacts"
        ],
        "summary": "Returns a list of all contacts.",
        "description": "When executing this route, the API will return the list of all contacts available in database.",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "tags": [
          "Contacts"
        ],
        "summary": "Creates a new contact.",
        "description": "This route is the one in charge of creating a new contact. These fields are required: firsName, lastName, email, favoriteColor and birthday.",
        "parameters": [
          {
            "name": "request",
            "in": "body",
            "schema": {
              "type": "object",
              "required": true,
              "properties": {
                "firstName": {
                  "example": "John"
                },
                "lastName": {
                  "example": "Doe"
                },
                "email": {
                  "description": "Contact email",
                  "example": "john.doe@mail.com"
                },
                "favoriteColor": {
                  "description": "Contact favorite color",
                  "example": "red"
                },
                "birthday": {
                  "description": "Contact birthday",
                  "example": "2020-01-01"
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/{id}": {
      "get": {
        "tags": [
          "Contacts"
        ],
        "summary": "Returns a single contact, specified by ID.",
        "description": "This route returns an existing contact when providing the correct ID.",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Incorrect data was supplied"
          }
        }
      },
      "put": {
        "tags": [
          "Contacts"
        ],
        "summary": "Updates a contact specified by ID.",
        "description": "This route will update the data for a specific contact. The API will update the fields provided in the request.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "requestBody",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "firstName": {
                  "example": "any"
                },
                "lastName": {
                  "example": "any"
                },
                "email": {
                  "example": "any"
                },
                "favoriteColor": {
                  "example": "any"
                },
                "birthday": {
                  "example": "any"
                }
              }
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": [
          "Contacts"
        ],
        "summary": "Deletes a contact specified by ID.",
        "description": "This route deletes a contact from database when the specific ID is provided.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Contact": {
        "type": "object",
        "required": [
          "firsName",
          "lastName",
          "email",
          "favoriteColor",
          "birthday"
        ],
        "properties": {
          "firstName": {
            "type": "string",
            "example": "John"
          },
          "lastName": {
            "type": "string",
            "example": "Doe"
          },
          "email": {
            "type": "string",
            "example": "john.doe@mail.com"
          },
          "favoriteColor": {
            "type": "string",
            "example": "red"
          },
          "birthday": {
            "type": "string",
            "example": "2000-01-01"
          }
        }
      }

    }
  }
}